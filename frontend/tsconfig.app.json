{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false, // Keeping false for gradual migration, but types are now properly defined
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true, // Now enabled with proper types
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true, // Enabled for better null safety

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
